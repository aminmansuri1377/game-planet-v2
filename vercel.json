{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "runtime": "edge",
        "regions": ["iad1"],
        "includeFiles": ["public/**", "next.config.js", "package.json", ".env*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/dashboard(.*)",
      "dest": "/dashboard",
      "continue": true
    },
    {
      "src": "/api/trpc/(.*)",
      "dest": "/api/trpc/$1",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/$1",
      "methods": ["GET", "POST"]
    }
  ]
}
